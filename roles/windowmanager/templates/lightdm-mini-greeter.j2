[greeter]
user = {{ user.name }}
show-password-label = true
password-label-text = password:
invalid-password-text = invalid password
show-input-cursor = true
password-alignment = left
password-input-width = -1
show-image-on-all-monitors = false
show-sys-info = false

[greeter-hotkeys]
mod-key = meta
shutdown-key = s
restart-key = r
hibernate-key = h
suspend-key = u
session-key = e

[greeter-theme]
font = "IBM Plex Sans"
font-size = 1em
font-weight = normal
font-style = normal

text-color = "#f2f4f8"
error-color = "#ee5396"

background-image = ""
background-image-size = auto
background-color = "#000000"

window-color = "#161616"
border-color = "#161616"
border-width = 1px

layout-space = 10

password-character = *
password-color = "#f2f4f8"
password-background-color = "#161616"
password-border-width = 0px
password-border-radius = 0px
